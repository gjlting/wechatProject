<!--pages/cloud/cloud.wxml-->
<view>云数据库</view>
<button bindtap="insert">插入数据</button>
<button bindtap="update">更新数据</button>
<button bindtap="search">查找数据</button>
<button bindtap="delete">删除数据</button>
<view>云函数</view>
<button bindtap="sum">求和</button>
<button bindtap="getOpenId">获取openid</button>
<button bindtap="batchDelete">批量删数据</button>
<view>云存储</view>
<button bindtap="uploadImage">上传图片</button>
<button bindtap="showImages">图片展示</button>
<block wx:for="{{images}}" wx:key="index">
<image src="{{item.fileID}}"></image>
<button size="mini" data-fileid="{{item.fileID}}" bindtap="download">下载</button>
</block>